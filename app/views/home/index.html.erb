<div ng-controller="ItemsCtrl">

  <form ng-submit="addItem()">
    <b>Add new Item </b> Name:
    <input type="text" ng-model="newItem.name">
    Describe:
    <input type="text" ng-model="newItem.describe">
    Price:
    <input type="text" ng-model="newItem.price">
    <input type="submit" value="Add">
  </form>


  <div id="item-list-container">
    <ul>
      <li ng-repeat="item in items"
          ng-click="showItem(item, $index)">
        <h3 ng-class="{active: $index == selectedRow}">{{item.name}} <small>({{item.price}} USD)</small></h3>
      </li>
    </ul>
  </div>

  <div id="item-view-container" ng-show="selectedItem">
    <h2>{{selectedItem.name}}</h2>
    <p>{{selectedItem.describe}}</p>
    <p>{{selectedItem.price}} USD</p>
  </div>
</div>